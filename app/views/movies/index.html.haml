-# This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, method: :get, id: 'ratings_form' do
  - @all_ratings.each do |rating|
    = label_tag "ratings_#{rating}" do
      = check_box_tag "ratings[#{rating}]", '1', @checked_ratings.include?(rating), id: "ratings_#{rating}"
      = rating
  = hidden_field_tag :sort, @sort
  = submit_tag 'Refresh', id: 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class => @title_hilite}= link_to 'Movie Title', movies_path(sort: 'title', ratings: Hash[@checked_ratings.map { |r| [r,'1'] }]), id: 'title_header'
      %th Rating
      %th{:class => @date_hilite}= link_to 'Release Date', movies_path(sort: 'release_date', ratings: Hash[@checked_ratings.map { |r| [r,'1'] }]), id: 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
